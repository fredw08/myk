source 'https://rubygems.org'

# Bundle edge Rails instead: gem 'rails', github: 'rails/rails'
gem 'rails', '4.0.5'

# Use postgresql as the database for Active Record
gem 'pg'

# Use SCSS for stylesheets
gem 'sass-rails', '~> 4.0.2'
gem 'sprockets', '<= 2.11.0'    # need to lock version temporarily for rails 4.0.5

# Use Uglifier as compressor for JavaScript assets
gem 'uglifier', '>= 1.3.0'

# Use CoffeeScript for .js.coffee assets and views
gem 'coffee-rails', '~> 4.0.0'

# See https://github.com/sstephenson/execjs#readme for more supported runtimes
# gem 'therubyracer', platforms: :ruby

# Use jquery as the JavaScript library
gem 'jquery-rails'

# Use AngularJS for some form operations
gem 'angularjs-rails'

# Turbolinks makes following links in your web application faster. Read more: https://github.com/rails/turbolinks
gem 'turbolinks'
gem 'jquery-turbolinks'   # make document ready and page:load event the same

# Build JSON APIs with ease. Read more: https://github.com/rails/jbuilder
gem 'jbuilder', '~> 1.2'

group :doc do
  # bundle exec rake doc:rails generates the API under doc/api.
  gem 'sdoc', require: false
end

# Use ActiveModel has_secure_password
# gem 'bcrypt', '~> 3.1.7'

# Use unicorn as the app server
# gem 'unicorn'

# Use Capistrano for deployment
# gem 'capistrano', group: :development

# Use debugger
# gem 'debugger', group: [:development, :test]

# Use puma as the app server
gem 'puma'

# bootstrap css framework integration
gem 'bootstrap-sass', '~> 3.1.1'

# use slim as default template language
gem 'slim-rails'

# authorization gem
gem 'cancancan'

# authentication gem
gem 'devise'
gem 'doorkeeper'

# simple_form form builder gem
gem 'simple_form', '>= 3.1.0rc1'

# strip attributes gem
gem 'strip_attributes'

# paginate gem
gem 'will_paginate-bootstrap'

# replace irb console with pry, may occaionally used in production environment
gem 'pry'
gem 'pry-rails'
# gem 'pry-plus'

# easier schema management for domain model
gem 'migrant'

# environment loader
gem 'dotenv-rails'

# file uploader gem
gem 'carrierwave'

group :development, :test do
  gem 'minitest-rails'
  gem 'turn', require: false
  gem 'valid_attribute'
  gem 'minitest-matchers'

  gem 'minitest-rails-capybara'
  gem 'poltergeist'
  gem 'connection_pool'
  gem 'teaspoon'

  gem 'fabrication'
  gem 'database_cleaner'

  gem 'awesome_print'

  gem 'simplecov', require: false
  gem 'spring'

  gem 'mailcatcher'

  gem 'better_errors'

  gem 'pry-byebug'
  gem 'pry-stack_explorer'
  gem 'pry-rescue'

  gem 'quiet_assets'

  gem 'rubocop', '~> 0.20.1'
  gem 'diffy'
  gem 'timecop'

  gem 'reek'
end

gem 'handlebars'
gem 'pdfkit'
gem 'andand'
gem 'select2-rails'
